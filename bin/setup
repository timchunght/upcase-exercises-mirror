#!/usr/bin/env sh

# Set up Rails app. Run this script immediately after cloning the codebase.
# https://github.com/thoughtbot/guides/tree/master/protocol

# Exit if any subcommand fails
set -e

# Set up Ruby dependencies via Bundler
bundle install

# Set up the database
bundle exec rake db:setup dev:prime

# Set up configurable environment variables
if [ ! -f .env ]; then
  cp .sample.env .env
  echo "*** Make sure to edit .env in this directory! ***"
fi

# Pick a port for Foreman
echo "port: 7000" > .foreman

# Set up DNS via Pow
if [ -d ~/.pow ]
then
  echo 7000 > ~/.pow/`basename $PWD`
else
  echo "Pow not set up but the team uses it for this project. Setup: http://goo.gl/RaDPO"
fi

# Set up deploys
git remote add staging git@heroku.com:tbot-whetstone-staging.git
heroku join --app tbot-whetstone-staging
git remote add production git@heroku.com:tbot-whetstone-production.git
heroku join --app tbot-whetstone-production
